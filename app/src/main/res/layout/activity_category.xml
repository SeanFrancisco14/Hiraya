<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/categorybg"
    android:orientation="vertical"
    tools:context=".CategoryActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="375dp"
        android:layout_height="292dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="415dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/categorypage" />

    <ImageButton
        android:id="@+id/btn_culture"
        android:layout_width="387dp"
        android:layout_height="371dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="208dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/category_culture" />

    <ImageButton
        android:id="@+id/btn_history"
        android:layout_width="383dp"
        android:layout_height="193dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="453dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="83dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/category_hisotry" />

    <ImageButton
        android:id="@+id/btn_language"
        android:layout_width="383dp"
        android:layout_height="193dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="192dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/category_language" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="326dp"
        android:layout_height="216dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="526dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="-11dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/backimg" />
</RelativeLayout>