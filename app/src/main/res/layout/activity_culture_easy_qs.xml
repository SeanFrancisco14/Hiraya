<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/easy_questions_cult"
    android:foregroundTint="#FFFFFF"
    tools:context=".CultureEasyQs">

    <TextView
        android:id="@+id/CultureEasy_Questions"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="468dp"
        android:background="#4f7649"
        android:gravity="center"
        android:text="QUESTIONS"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="90dp" />

    <TextView
        android:id="@+id/CultureEasy_Score"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="659dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#4f7649"
        android:gravity="center"
        android:text="· CULTURE AND TRADITION ·"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="23dp" />

    <Button
        android:id="@+id/Option1"
        android:layout_width="304dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="350dp"
        android:background="@drawable/custom_round_button"
        android:backgroundTint="#ffffff"
        android:text="OPTION 1"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Option2"
        android:layout_width="304dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="273dp"
        android:background="@drawable/custom_round_button"
        android:backgroundTint="#ffffff"
        android:text="OPTION 2"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Option3"
        android:layout_width="304dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="190dp"
        android:background="@drawable/custom_round_button"
        android:backgroundTint="#ffffff"
        android:text="OPTION 3"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Option4"
        android:layout_width="304dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="108dp"
        android:background="@drawable/custom_round_button"
        android:backgroundTint="#ffffff"
        android:text="OPTION 4"
        android:textColor="@color/black"
        android:textStyle="bold" />


</RelativeLayout>